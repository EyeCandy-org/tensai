{
  "name": "tensaijs",
  "version": "1.0.0",
  "description": "A Love2D-style game engine for Node.js using SDL2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "install": "node-gyp rebuild",
    "build": "tsc",
    "test": "node test/test.js",
    "clean": "rimraf build dist",
    "rebuild": "npm run clean && npm run install && npm run build",
    "format": "clang-format -i src/**/*.cpp src/**/*.h"
  },
  "keywords": [
    "game",
    "engine",
    "sdl",
    "love2d",
    "graphics",
    "audio",
    "input"
  ],
  "author": "NEOAPPS",
  "license": "LGPL-3.0",
  "dependencies": {
    "@types/node": "^24.3.0",
    "node-addon-api": "^8.5.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "gypfile": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/neoapps-dev/tensai"
  },
  "bugs": {
    "url": "https://github.com/neoapps-dev/tensai/issues"
  },
  "homepage": "https://github.com/neoapps-dev/tensai#readme"
}
